<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BookManagerWindow">
   <children>
      <TabPane prefHeight="400.0" prefWidth="601.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Фонд книг">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab text="Действия">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="add" layoutX="236.0" layoutY="65.0" mnemonicParsing="false" onAction="#clickAdd" text="Добавить запись" />
                        <Button fx:id="edit" layoutX="237.0" layoutY="102.0" mnemonicParsing="false" onAction="#clickEdit" prefHeight="26.0" prefWidth="106.0" text="Редактировать" />
                        <Button fx:id="sort" layoutX="236.0" layoutY="138.0" mnemonicParsing="false" onAction="#clickSort" prefHeight="26.0" prefWidth="108.0" text="Сортировать" />
                        <Button fx:id="search" layoutX="237.0" layoutY="173.0" mnemonicParsing="false" onAction="#clickSearch" prefHeight="26.0" prefWidth="106.0" text="Поиск" />
                        <Button fx:id="delete" layoutX="237.0" layoutY="211.0" mnemonicParsing="false" onAction="#clickDelete" prefHeight="26.0" prefWidth="106.0" text="Удаление" />
                        <Button fx:id="back" layoutX="237.0" layoutY="249.0" mnemonicParsing="false" onAction="#clickBack" prefHeight="26.0" prefWidth="106.0" text="Выйти" />
                     </children></AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
